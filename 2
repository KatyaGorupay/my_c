#include <stdio.h>
#include <limits.h>
#define N 5
#define M 5
main() {
int a[N][M], i, j, min,max,mm,mi;
min=INT_MAX;
max=INT_MIN;

    for (i=0; i<N; i++) {
    for (j=0; j<M; j++) {
    a[i][j] = rand() % 100;
    printf(" %d ", a[i][j]);
    }
    printf("\n");
    }
        for (j=0; j<M; j++) {
        for (i=1; i<N; i++){

if (a[i][j] < min){
min = a[i][j];
mi=i;}

    if (a[i][j] > max){
    max = a[i][j];
    mm=i;}}
a[mi][j]=max;
a[mm][j]=min;
min=INT_MAX;
max=INT_MIN;
}
printf("\n");
for (i=0; i<N; i++) {
for (j=0; j<M; j++)
printf(" %2d ", a[i][j]);
printf("\n");}
return (0);
}
